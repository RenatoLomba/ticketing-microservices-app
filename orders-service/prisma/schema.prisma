generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  EXPIRED
  PAID
  PENDING
}

model Product {
  id         String   @id @default(uuid())
  title      String
  price      Float
  externalId String   @unique
  version    Int
  createdAt  DateTime @default(now())
  orders     Order[]
}

model Order {
  id        String      @id @default(uuid())
  status    OrderStatus
  userId    String
  expiresAt DateTime
  productId String
  product   Product     @relation(references: [id], fields: [productId])
  createdAt DateTime    @default(now())

  @@index([userId])
}
